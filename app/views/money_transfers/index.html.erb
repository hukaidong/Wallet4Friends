<p id="notice"><%= notice %></p>

<h1>Money Transfers</h1>

<table>
  <thead>
  <tr>
    <th>Memo</th>
    <th>Amount</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @money_transfers.each do |money_transfer| %>
    <tr>
      <td><%= money_transfer.memo %></td>
      <td><%= money_transfer.amount %></td>
      <td><%= link_to 'Show', money_transfer %></td>
      <td><%= link_to 'Edit', edit_money_transfer_path(money_transfer) %></td>
      <td><%= link_to 'Destroy', money_transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Money Transfer', new_money_transfer_path %>
